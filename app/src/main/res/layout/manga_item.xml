<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="manga"
                  type="com.example.trile.poc.database.model.MangaItem"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:background="@color/colorPrimary"
        app:cardCornerRadius="@dimen/manga_item_corner_radius"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/manga_item_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/ripple_effect_gray">

            <ImageView
                android:id="@+id/manga_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/manga_info_height"
                android:gravity="center_vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/manga_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/manga_info_margin"
                        android:layout_marginTop="@dimen/manga_info_margin"
                        android:layout_marginBottom="@dimen/manga_title_subtitle_margin"
                        android:layout_weight="1"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:text="@{manga.Title}"
                        tools:text="Manga Name"/>

                    <ImageView
                        android:id="@+id/secondary_action"
                        android:layout_width="@dimen/manga_item_secondary_action_size"
                        android:layout_height="@dimen/manga_item_secondary_action_size"
                        android:layout_marginStart="@dimen/manga_info_margin"
                        android:layout_marginTop="@dimen/manga_info_margin"
                        android:layout_marginEnd="@dimen/manga_info_margin"
                        android:src="@drawable/ic_more_vert_black_24dp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/manga_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/manga_info_margin"
                    android:layout_marginBottom="@dimen/manga_info_margin"
                    android:text="@{manga.Author}"
                    tools:text="Author"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>
